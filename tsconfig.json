{
  "compilerOptions": {
    "target": "es5",                        
    "module": "esnext",                          
    "lib": ["es2017","dom"],                  
    "allowJs": true,                          
    "jsx": "preserve",                      
    "outDir": "./built",                      
    "downlevelIteration": true,           
    "skipLibCheck":true,
    "moduleResolution": "node",               
    "allowSyntheticDefaultImports": true,     
    "experimentalDecorators": true,           
    "baseUrl": "./",
     "noEmit":false,
    "paths": {
      "@": ["src/"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
